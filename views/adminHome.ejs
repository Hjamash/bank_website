<% include ./partials/header %>
<div class="container">
  <form style="width: 25%" role="search" action="/admin/<%= currentUser.username %>/search/account" method="POST">
    <div class="input-group add-on">
        <input class="form-control" placeholder="Search" name="search" id="srch-term" type="text">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
      </div>
    </form>
  </div>
  <div id="account" class="container">

    <h4>Accounts:</h4>
<table>
    <tr>
      <th>Index</th>
      <th>Name</th>
      <th>Age</th>
      <th>Cell No</th>
      <th>Status</th>
      <th>Acc no</th>
    </tr>
    
    <% var i=1 %>
    <% custInfo.forEach(function(customer){ %>
    <tr>
    <form action="/admin/<%= currentUser.username %>/customer/<%= customer._id %>/log" method="GET">    
        <td><%= i++ %></td>  
        <td name="cName" value="<%= customer.Fname %>"><%= customer.Fname %> <%= customer.Lname %></td>
        <td><%= customer.age  %></td>
        <td><%= customer.cellNo %></td>
        <% if(customer.blocked == false){ %>
          <td>active</td>
          <% } else { %>
            <td>blocked</td>
        <% } %>
        <td><%= customer.acc.accNo %></td>
        <td><button type="Submit" class="btn btn-primary btn-sm btn-block">View</button></td>
     </form>  
    </tr>
    <% }) %>
  </table>
</div>
<% include ./partials/footer %>